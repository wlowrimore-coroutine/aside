<div class="relative w-full h-[100vh]">
  <div class="absolute h-full bg-gray-100 text-black">
    <div class="absolute w-60 bg-gray-100">
      <div id="side_panel_header" class="bottom-border bg-gray-100 flex pl-4 py-2">
        <p class="init-container mx-3"> <%= current_user.name.initials %></p>
        <p class="mt-1"><%= current_user.name %></p>
      </div>
      <div id="users_rooms" class="s-panel-border p-6">
        <div class="h-auto pb-6">
          <h2 class="text-2xl tracking-wider">Users</h2>
          <%= turbo_stream_from "users" %>
          <div id="users" class="text-sm tracking-wider">
            <%= render @users %>
          </div>
        </div>
        <div class="h-auto">
          <h2 class="text-2xl tracking-wider">Rooms</h2>
          <%= turbo_stream_from "rooms" %>
          <div id="rooms" class="text-lg font-bold tracking-wide">
            <%= render @rooms %>
          </div>
        </div>
      </div>
      <%= render 'layouts/new_room_form' %>
    </div>
  </div>

  <div class="h-[100vh] w-[100vw] bg-white text-black">
    <% if @single_room %>
      <div id="single_room" class="absolute left-[15em] w-full">
        <h4 class="bg-gray-100 px-[35%] py-2 text-2xl font-semibold tracking-wider"> <%= @user&.email || @single_room.name %> </h4> 
        <%= turbo_stream_from @single_room %>
        <div id="messages" data-controller="scroll" class="text-sm text-black tracking-wide pt-2 mr-20">
          <%= render @messages %>
        </div>
        
          <%= render 'layouts/new_message_form' %> 
        
      </div>
    <% end %>
  </div>
</div>
