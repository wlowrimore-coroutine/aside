<div class="container bg-gray-900 text-white p-6">
  <div>
    <h5 class="text-sm tracking-widest font-light mb-2"> <%= current_user.email %></h5>
    <h2 class="text-2xl tracking-wider">Users</h2>
    <%= turbo_stream_from "users" %>
    <div id="users" class="text-sm tracking-widest font-light py-4">
      <%= render @users %>
    </div>
    <h2 class="text-2xl tracking-wider">Rooms</h2>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms" class="text-sm tracking-widest font-light mb-2 py-4">
      <%= render @rooms %>
    </div>
    <%= render 'layouts/new_room_form' %>
  </div>
</div>

<div class="w-full bg-gray-900 text-white p-6">
  <% if @single_room %>
    <h4 class="text-center"> <%= @single_room.name %> </h4>
  <% end %>
</div>
