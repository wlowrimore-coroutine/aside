<section class="relative inset-0 grid grid-cols-6 gap-0 h-screen">
  
  <aside id="side_bar" class="flex-col col-span-1 h-[95.4] border-r">
    <p class="flex bg-gray-100 justify-center tracking-wider border-b text-md w-full py-5"><%= current_user.name %></p>
      
    
    <div id='side-body' class="h-full w-full px-10">
      <div class="h-auto max-h-[56rem]">
        <h2 class="text-2xl font-bold tracking-wider mt-8 mb-2">Users</h2>
        <%= turbo_stream_from "users" %>
          <%= render @users %>
        <hr />
        <h2 class="text-2xl font-bold tracking-wider mt-6 mb-2">Rooms</h2>
        <%= turbo_stream_from "rooms" %>
          <%= render @rooms %>
      </div>
    </div>
      <div class='absolute bottom-0 mb-2'>
        <%= render "layouts/new_room_form" %>
      </div>
  </aside>

  <div id="message_window" class="col-span-5 h-screen border-l">
    <% if @single_room %>
      <h4 class="flex bg-gray-100 border-b text-2xl font-bold w-full px-14 py-4"><%= @user&.email || @single_room.name %></h4>
        <%= turbo_stream_from @single_room %>
      <div id="messages" class=" overflow-y-auto h-auto max-h-[56rem] overflow-hidden scroll-m-4 text-sm text-black tracking-wide">
        <%= render @messages %>
      </div>
        <%= render "layouts/new_message_form", class:'absolute bottom-0' %>
    <% end %>
  </div>
</section> 



    
      
      
  
    

      
      

  


 