<div class="container bg-gray-100 text-black p-6">
  <div class="side-panel col-md-4 col-sm-4">
    <h5 class="text-sm tracking-wide mb-8"> <%= current_user.email %></h5>
    <h2 class="text-2xl tracking-wider">Users</h2>
    <%= turbo_stream_from "users" %>
    <div id="users" class="text-sm tracking-wide py-4">
      <%= render @users %>
    </div>
    <h2 class="text-2xl tracking-wider">Rooms</h2>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms" class="text-sm tracking-wide mb-2 py-4">
      <%= render @rooms %>
    </div>
    <%= render 'layouts/new_room_form' %>
  </div>
</div>

<div class="container w-full bg-white text-black px-6">
  <% if @single_room %>
    <div id="single_room" class="w-full">
      <h4 class="text-center font-semibold tracking-wider"> <%= @user&.email || @single_room.name %> </h4>
      <%= turbo_stream_from @single_room %>
      <div id="messages" data-controller="scroll" class="text-sm text-black tracking-wide pt-4">
        <%= render @messages %>
      </div>
        <%= render 'layouts/new_message_form' %>
    </div>
  <% end %>
</div>
